<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/publicarRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp"
    android:background="#F6F8FB"
    tools:context=".PublicarVenta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloPantalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumen de publicación"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#20232A"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Tipo de publicación -->
        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E70FF"
            android:layout_marginBottom="10dp" />

        <!-- Card con fondo lila (el rosita bonito) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F5EEFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Título:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#20232A" />
                <TextView
                    android:id="@+id/tvTituloValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Descripción -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#20232A" />
                <TextView
                    android:id="@+id/tvDescripcionValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Precio -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#20232A" />
                <TextView
                    android:id="@+id/tvPrecioValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Archivo o Fecha/Hora -->
                <TextView
                    android:id="@+id/tvExtraLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Archivo:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#20232A" />
                <TextView
                    android:id="@+id/tvExtraValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- (Opcional) texto resumen plain escondido, por si lo quieres conservar -->
        <TextView
            android:id="@+id/tvResumen"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Botones -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmar"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:text="Confirmar"
            app:backgroundTint="#2E70FF"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:text="Volver" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
