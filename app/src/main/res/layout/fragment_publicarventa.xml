<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/publicarRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp"
    android:background="#F6F8FB"
    tools:context=".PublicarVenta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloPantalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumen de publicación"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#20232A"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Tipo de publicación -->
        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo: Curso (pregrabado)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E70FF"
            android:layout_marginBottom="10dp" />

        <!-- Card de información -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título del curso/clase -->
                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Título:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#20232A" />

                <TextView
                    android:id="@+id/tvTituloValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ejemplo de curso"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Descripción -->
                <TextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#20232A" />

                <TextView
                    android:id="@+id/tvDescripcionValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aquí va la descripción del curso o clase."
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Precio -->
                <TextView
                    android:id="@+id/tvPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#20232A" />

                <TextView
                    android:id="@+id/tvPrecioValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$999 MXN"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Archivo o fecha/hora -->
                <TextView
                    android:id="@+id/tvExtraLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Archivo:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#20232A" />

                <TextView
                    android:id="@+id/tvExtraValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ejemplo.pdf"
                    android:textSize="16sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Texto resumen final -->
        <TextView
            android:id="@+id/tvResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Aquí aparecerá el resumen general)"
            android:textSize="15sp"
            android:textColor="#444"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="24dp" />

        <!-- Botón volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegresar"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            app:backgroundTint="#2E70FF"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
